[Unit]
Description=libreForms celery daemon
After=network.target

[Service]
User=libreforms
Group=libreforms
WorkingDirectory=/opt/libreForms/
Environment="PATH=/opt/libreForms/venv/bin"
ExecStart=/opt/libreForms/venv/bin/celery -A celeryd worker --loglevel=info --logfile=/opt/libreForms/log/celery.log
Restart=always

[Install]
WantedBy=multi-user.target
