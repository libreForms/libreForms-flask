{% extends 'base.html.jinja' %}
{% block content %}

  
<div title="signature_list" style="padding-top: 10px;">
    <h4>Signing Keys</h4>
    <div class="list-group vh-100 scrollable overflow-auto table table-hover">

        <table title="signature_table" class="table {{'text-dark' if not dark_mode else 'table-hover'}}">
            <tbody>
                <tr>
                    <th>signature</th>
                    <th>email</th>
                    <th>scope</th>
                    <th>active</th>
                    <th>timestamp_human_readable</th>
                    <th>expiration_human_readable</th>
                </tr>

            {% for row in signature_list %}
            <tr class="table{% if emphasize and item in emphasize %}-secondary{% else %}{{'-dark' if dark_mode else '-transparent'}}{% endif %}">

            <tr class="table{% if emphasize and item in emphasize %}-secondary{% else %}{{'-dark' if dark_mode else '-transparent'}}{% endif %}">

                <td>{{row[0]}}</td>
                <td>{{row[1]}}</td>
                <td>{{row[2]}}</td>
                <td>{{row[3]}}</td>
                <td>{{row[4]}}</td>
                <td>{{row[5]}}</td>

            </tr>
            </tbody>
        </table>
    {% endfor %}
    </div>
</div>


{% endblock %}
