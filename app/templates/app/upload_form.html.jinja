{% extends 'base.html.jinja' %}


{% block content %}

<label>Upload a CSV file with a of the <b>{{subtitle}}</b> form here.</label><hr>

<form title="upload form" method = "POST" enctype = "multipart/form-data">

  <div title="{{form_name}} upload" class="form-group">
    <label class="form-label mt-4 required" for="file">Upload</label>
    <input class="form-control" type = "file" name = "file" />
  </div>

    <div title="submit" class="form-group mt-4">
      <input class="btn btn-primary" type="submit" value="Submit">
    </div>
</form>

<div style="padding-top: 10px;">
<hr/>
<table role="presentation" title="download form template" >
  <tr><td>
	<a href="{{ url_for('forms.download_file', filename = filename) }}"><button type="button" class="btn btn-outline-success btn-sm">download a CSV template of this form</button></a>
  </td></tr>
  <tr><td>
	<a href="{{ url_for('forms.forms', form_name = subtitle) }}"><button type="button" class="btn btn-outline-success btn-sm">go back to form</button></a>
  </td></tr>
</table>
</div>


{% endblock %}
