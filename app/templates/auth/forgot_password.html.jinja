{% extends 'base.html.jinja' %}



{% block content %}


{% if reset %}
<label>Enter your new password below</label><hr>

<form title="forgot password" method="post">
  <fieldset>

    <div title="new password" class="form-group">
      <label class="form-label mt-4" for="password">New Password</label>
      <input class="form-control" type="password" name="password" id="password" placeholder="Enter a new password">  
    </div>

    <div title="re-enter new password" class="form-group">
      <label class="form-label mt-4" for="reenter_new_password">Re-enter New Password</label>
      <input class="form-control" type="password" name="reenter_new_password" id="reenter_new_password" placeholder="Re-enter new password" required>            
    </div>

    <div title="submit" class="form-group mt-4">
      <input class="btn btn-primary" type="submit" value="Submit">
    </div>
  
  </fieldset>
</form>

{% else %}

<label>Enter your email below to reset your password</label><hr>

  <form method="post" id="forgot_password">
    <fieldset>

      <div title="email" class="form-group">
        <label class="form-label mt-4" for="email">Email</label>
        <!-- <input type="email" name="email" id="email"> -->
        <input class="form-control" name="email" id="email" placeholder="Enter your email">  
      </div>      

      <div title="captcha" class="form-group mt-4">
        {% if config['enable_hcaptcha'] %}
        <div class="h-captcha" data-theme="{{'dark' if dark_mode else 'light'}}" data-sitekey="{{ config['hcaptcha_site_key'] }}"></div><br>
        {% endif %}
        <input title="submit" class="btn btn-primary" type="submit" value="Submit">
      </div>
    
    </fieldset>
  </form>


{% endif %}

{% endblock %}


